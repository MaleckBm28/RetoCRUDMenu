<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MarketWindowController">

    <children>
        <VBox prefHeight="650.0" prefWidth="1000.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">

            <!-- Menu barra -->
            <MenuBar style="-fx-background-color: #f4f4f4;">
                <menus>
                    <Menu mnemonicParsing="false" text="opc1">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#handleClose" text="Cerrar Aplicación" />
                        </items>
                    </Menu>
                
                    <Menu mnemonicParsing="false" text="opc2">
                        <items>
                            <MenuItem mnemonicParsing="false" text="Pantalla Completa" />
                        </items>
                    </Menu>
                
                    <Menu mnemonicParsing="false" text="Actions">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#handleReport" text="Report" />
                        </items>
                    </Menu>
                
                    <Menu mnemonicParsing="false" text="Help">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#handleHelp" text="Ayuda" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            
            
            
            <!-- HEADER LOGO -->
            <AnchorPane prefHeight="60.0" style="-fx-background-color: white;">
                <children>
                    <ImageView fitHeight="50.0" fitWidth="250.0"
                               layoutX="20.0" layoutY="5.0"
                               preserveRatio="true">
                        <image>
                            <Image url="@../imgmarket/logo.jpg"/>
                        </image>
                    </ImageView>
                </children>
            </AnchorPane>

            <!-- BARRA BUSCADOR -->
            <AnchorPane prefHeight="70.0" style="-fx-background-color: #D3D3D3;">
                <children>
                    <HBox alignment="CENTER_LEFT"
                          spacing="20.0"
                          layoutY="10.0"
                          AnchorPane.leftAnchor="30.0"
                          AnchorPane.rightAnchor="30.0">

                        <children>

                            <VBox spacing="5.0">
                                <children>
                                    <Label text="Tipos de Juego">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font>
                                    </Label>
                                    <MenuButton fx:id="menuGameType" mnemonicParsing="false" prefWidth="150.0" text="Seleccionar Juegos" />
                                </children>
                            </VBox>

                            <VBox spacing="5.0">
                                <children>
                                    <Label text="Rareza">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font>
                                    </Label>
                                    <MenuButton fx:id="menuRarity" mnemonicParsing="false" prefWidth="150.0" text="Seleccionar Rareza" />
                                </children>
                            </VBox>

                            <Button text="BORRAR FILTROS" 
                                    onAction="#clearFilters" 
                                    prefHeight="30.0" 
                                    prefWidth="130.0" 
                                    style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;" 
                                    translateY="10.0">
                                <font>
                                    <Font size="11.0" />
                                </font>
                            </Button>

                            <!-- EMPUJA ICONOS A LA DERECHA -->
                            <Region HBox.hgrow="ALWAYS"/>

                            <!-- ICONO CARRITO -->
                            <Button onAction="#openCart"
                                    style="-fx-background-color:transparent; -fx-cursor:hand;"
                                    translateY="10.0">
                                <graphic>
                                    <ImageView fitHeight="28.0" fitWidth="28.0" preserveRatio="true">
                                        <image>
                                            <Image url="@../images/carrito.png"/>
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>

                            <!-- ICONO USUARIO -->
                            <Button onAction="#openUser"
                                    style="-fx-background-color:transparent; -fx-cursor:hand;"
                                    translateY="10.0">
                                <graphic>
                                    <ImageView fitHeight="28.0" fitWidth="28.0" preserveRatio="true">
                                        <image>
                                            <Image url="@../images/icono_usuario.png"/>
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>

                        </children>
                    </HBox>
                </children>
            </AnchorPane>

            <!-- CONTENIDO -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                <content>
                    <GridPane fx:id="grid" hgap="20.0" vgap="20.0">
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"/>
                        </rowConstraints>
                        <padding>
                            <Insets top="20" left="30" right="20" bottom="20"/>
                        </padding>
                    </GridPane>
                </content>
            </ScrollPane>

            <!-- FOOTER -->
            <AnchorPane prefHeight="40.0" style="-fx-background-color:#333;">
                <children>
                    <Label text="© 2025 Distrito Uno - Todos los derechos reservados"
                           textFill="WHITE"
                           layoutX="20.0"
                           layoutY="12.0"/>
                    <Label text="v1.0.0"
                           textFill="#cccccc"
                           layoutY="12.0"
                           AnchorPane.rightAnchor="20.0"/>
                </children>
            </AnchorPane>

        </VBox>
    </children>
</AnchorPane>
