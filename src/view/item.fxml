<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="290.0" prefWidth="220.0"
            style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 10);"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ItemController">
    <children>
        <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0"
              prefHeight="270.0" prefWidth="200.0" spacing="8.0"
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <ImageView fx:id="imgProduct" fitHeight="140.0" fitWidth="180.0"
                           pickOnBounds="true" preserveRatio="true" />

                <Label fx:id="lblName" alignment="CENTER" prefHeight="45.0" prefWidth="190.0"
                       text="Nombre Producto" textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <Label fx:id="lblPrice" text="â‚¬0.00">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <AnchorPane prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Spinner fx:id="spinnerAmount" layoutX="10.0" layoutY="8.0"
                                 prefHeight="25.0" prefWidth="65.0" />

                        <Button fx:id="btnAdd"
                                onAction="#addToCart"
                                layoutX="85.0" layoutY="8.0"
                                mnemonicParsing="false"
                                prefHeight="25.0" prefWidth="105.0"
                                style="-fx-background-color: #E0E0E0; -fx-cursor: hand; -fx-background-radius: 5;"
                                text="Add to Cart">
                            <font>
                                <Font name="System Bold" size="11.0" />
                            </font>
                        </Button>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
